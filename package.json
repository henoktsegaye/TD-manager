{
  "name": "td-manager",
  "displayName": "TD(Technical Debt) Manager",
  "description": "Helps you manage Technical debt in your project. It helps you detect Technical debt issues and share among team members.",
  "version": "1.0.0",
  "publisher": "HenokTsegaye",
  "icon": "icon/logo.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "license": "MIT",
  "categories": [
    "Notebooks",
    "Formatters",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/henoktsegaye/TD-manager"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "td-manager",
        "contents": "No TD comments found. Once you have TD comments it will show here!"
      },
      {
        "view": "todo-manager",
        "contents": "No TODO comments found. Once you have TODO comments it will show here!"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "td-manager.refreshEntry",
          "when": "view == td-manager",
          "group": "navigation"
        },
        {
          "command": "todo-manager.refreshEntry",
          "when": "view == todo-manager",
          "group": "navigation"
        },
        {
          "command": "todo-manager.groupByFolder",
          "when": "view == todo-manager",
          "group": "navigation"
        },
        {
          "command": "todo-manager.list",
          "when": "view == todo-manager",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "td-manager.refreshEntry",
        "title": "Refresh TD manager list (For saved files only)",
        "icon": "$(refresh)"
      },
      {
        "command": "todo-manager.refreshEntry",
        "title": "Refresh TODO manager list (For saved files only)",
        "icon": "$(refresh)"
      },
      {
        "command": "todo-manager.groupByFolder",
        "title": "Group TODOs by folder",
        "icon": "$(list-tree)"
      },
      {
        "command": "todo-manager.list",
        "title": "List TODOs ",
        "icon": "$(list-unordered)"
      }
    ],
    "configuration": {
      "title": "TD-manager"
    },
    "views": {
      "explorer-td": [
        {
          "id": "td-manager",
          "name": "TD manager"
        },
        {
          "id": "todo-manager",
          "name": "TODO viewer"
        },
        {
          "type": "webview",
          "id": "td-analysis",
          "name": "TD Analysis"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "explorer-td",
          "title": "TD-manager",
          "icon": "/icon/logo.svg"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack ",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
